<UserControl x:Class="CTTManagement.Views.FormVCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CTTManagement.Views"
             xmlns:viewmodel="clr-namespace:CTTManagement.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="192">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <ListBox ScrollViewer.CanContentScroll="True" x:Name="FormVCheckBox1"   Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate >
                    <!--DataType="{x:Type CheckBoxViewModel}"-->
                   
                    <CheckBox   Content="{Binding Name}" IsChecked="{Binding IsChecked}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </ScrollViewer>
</UserControl>
